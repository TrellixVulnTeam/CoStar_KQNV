-file("test/lib/diameter/src/transport/diameter_sctp_sup.erl", 1).

-module(diameter_sctp_sup).

-behaviour(supervisor).

-export([start/0,start_child/1]).

-export([start_link/1,init/1]).

start() ->
    diameter_transport_sup:start_child(diameter_sctp_transport_sup,
                                       diameter_sctp_sup),
    diameter_transport_sup:start_child(diameter_sctp_listener_sup,
                                       diameter_sctp_sup).

start_child(T) ->
    SupRef =
        case element(1, T) of
            connect ->
                diameter_sctp_transport_sup;
            accept ->
                diameter_sctp_transport_sup;
            listen ->
                diameter_sctp_listener_sup
        end,
    supervisor:start_child(SupRef, [T]).

start_link(Name) ->
    supervisor:start_link({local,Name}, diameter_sctp_sup, []).

init([]) ->
    Mod = diameter_sctp,
    Flags = {simple_one_for_one,0,1},
    ChildSpec = {Mod,{Mod,start_link,[]},temporary,1000,worker,[Mod]},
    {ok,{Flags,[ChildSpec]}}.



