-file("test/lib/diameter/src/base/diameter_service_sup.erl", 1).

-module(diameter_service_sup).

-behaviour(supervisor).

-export([start_link/0,start_child/1]).

-export([init/1]).

start_link() ->
    SupName = {local,diameter_service_sup},
    supervisor:start_link(SupName, diameter_service_sup, []).

start_child(ServiceName) ->
    supervisor:start_child(diameter_service_sup, [ServiceName]).

init([]) ->
    Mod = diameter_service,
    Flags = {simple_one_for_one,0,1},
    ChildSpec = {Mod,{Mod,start_link,[]},temporary,1000,worker,[Mod]},
    {ok,{Flags,[ChildSpec]}}.



