-file("test/lib/diameter/src/base/diameter_watchdog_sup.erl", 1).

-module(diameter_watchdog_sup).

-behaviour(supervisor).

-export([start_link/0,start_child/1]).

-export([init/1]).

start_link() ->
    SupName = {local,diameter_watchdog_sup},
    supervisor:start_link(SupName, diameter_watchdog_sup, []).

start_child(T) ->
    supervisor:start_child(diameter_watchdog_sup, [T]).

init([]) ->
    Mod = diameter_watchdog,
    Flags = {simple_one_for_one,0,1},
    ChildSpec = {Mod,{Mod,start_link,[]},temporary,1000,worker,[Mod]},
    {ok,{Flags,[ChildSpec]}}.



